{% include "head.njk" %}
  <body class="relative overflow-x-hidden dark:bg-dark dark:text-white text-dark transition-all duration-300">
    <div class="absolute max-w-6xl mx-auto inset-0 -z-40">
      <div class="absolute w-[150px] md:w-[400px] h-[150px] md:h-[400px] dark:bg-blue-400/60 bg-orange-300/30 blur-3xl rounded-full -z-10 top-40 left-10"></div>
      <div class="absolute w-[200px] md:w-[400px] h-[200px] md:h-[400px] dark:bg-blue-400/60 bg-blue-300/30 blur-3xl rounded-full -z-10 top-40 right-12"></div>
      <div class="absolute w-[300px] md:w-[450px] h-[300px] md:h-[450px] dark:bg-blue-400/60 bg-orange-300/30 blur-2xl rounded-full -z-10 bottom-40 left-12"></div>
      <div class="absolute w-[250px] md:w-[450px] h-[250px] md:h-[450px] dark:bg-blue-400/60 bg-blue-300/30 blur-2xl rounded-full -z-10 bottom-96 right-12"></div>
    </div>
    <main class="transition-all duration-300 w-full dark:bg-black/80 min-h-screen px-4 z-10 backdrop-blur-3xl">
      {% include 'header.njk' %}
        {{ content | safe }}
    </main>
    {% include 'footer.njk' %}
    <script src="/assets/js/index.js"></script>
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
